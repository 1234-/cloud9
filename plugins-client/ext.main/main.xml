<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:appsettings name="ide" debug="false"
      disable-space             = "true"
      auto-hide-loading         = "true"
      allow-select              = "false"
      allow-blur                = "false"
      initdelay                 = "false"
      autoHideLoading           = "false"
      storage                   = "cookie"
      baseurl                   = "{apf.host ? apf.host : ''}"
      requested-with-getparam   = "xhr" />

    <!-- default model -->
    <a:model />

    <a:state id="stServerConnected" active="false" />
    <a:state id="stProcessRunning" active="false" />

    <a:scrollbar
        id       = "sbShared"
        skin     = "sbios"
        top      = "0"
        right    = "0"
        bottom   = "0"
        width    = "7"
        showonscroll = "true"
        zindex   = "100000"
    />

    <a:vbox anchors="0 0 0 0" id="vbMain">
        <a:hbox id="view-mode-box-not-loggedin" visible="false" height="55" class="view-mode-box" align="center" edge="0 10">
            <a href="http://c9.io" class="c9-logo-view-mode"></a>
            <a:filler />
            <a:hbox align="center">
                <span class="yellow-label">You are in Guest mode <span class="blue-label">(no editing)</span></span>
                <a href="http://c9.io/site/pricing/" target="_blank" class="nodecor-link">
                    <a:button skin="button-colorless" class="dark" onclick="" margin="0 10" width="65">Sign up</a:button>
                </a>
                or
                <a:button skin="button-colorless" class="dark green" onclick="winLogin.show()" margin="0 10" width="115">Sign in to edit*</a:button>
            </a:hbox>
        </a:hbox>
        <a:hbox id="view-mode-box-readonly" visible="false" height="35" class="view-mode-box" align="center" edge="0 10">
            <span class="blue-label">This project you are viewing is owned by <span id="lblPrjUser" class="yellow-label"></span></span>
            <a:filler />
            <a:hbox align="center">
                <span class="blue-label">Need edit-rights? Simply 
                    <a id="chatWithUser" href="javascript:void(0)" class="green-label">chat</a> with the project owner!</span>
            </a:hbox>
            <a:filler />
            <a href="javascript:void(0)" class="white-label nodecor-link" 
              onclick="self['view-mode-box-readonly'].hide();self['view-mode-box-readonly'].noshow=true;apf.setStyleClass(vbMain.$ext, '', ['readonly']);">
                Hide this!
            </a>
        </a:hbox>
        
        <a:bar skin="c9-menu-bar" id="logobar">
            <a:hbox>
                <a:hbox id="barTools" edge="0 0 0 0" padding="3" align="center">
                    <a:divider skin="c9-divider-double" />
                </a:hbox>
                <a:filler />
                <a:hbox id="barExtras" edge="0 0 0 0" padding="3" align="center">
                    <a:divider skin="c9-divider" visible="false" />
                </a:hbox>
            </a:hbox>
        </a:bar>

        <a:hbox flex="1" padding="0">
            <a:vbox id="mainRow" padding="0" flex="1">
                <a:hbox id="hboxTabBar" padding="0" edge="0" height="27" align="start">
                    <a:hbox id="barButtonContainer" flex="1" align="start" />
                </a:hbox>
                <a:hbox id="hboxMain" padding="0" edge="0" flex="1">
                    <a:vbox id="colLeft" width="200" minwidth="105" visible="false" />
                    <a:splitter width="0" id="splitterPanelLeft" />
                    <a:vbox id="colMiddle" flex="1" padding="3" />
                </a:hbox>
            </a:vbox>
            <a:vbox id="colRight" padding="0">
                <a:hbox id="hboxDockPanel" flex="1" class="hboxdockpanel">
                </a:hbox>
            </a:vbox>
        </a:hbox>
    </a:vbox>
</a:application>