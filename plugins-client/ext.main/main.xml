<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:appsettings name="ide" debug="false"
      disable-space             = "true"
      auto-hide-loading         = "true"
      allow-select              = "false"
      allow-blur                = "false"
      initdelay                 = "false"
      autoHideLoading           = "false"
      storage                   = "cookie"
      baseurl                   = "{apf.host ? apf.host : ''}"
      requested-with-getparam   = "xhr" />

    <!-- default model -->
    <a:model />

    <a:state id="stServerConnected" active="false" />
    <a:state id="stProcessRunning" active="false" />

    <a:scrollbar
        id       = "sbShared"
        skin     = "sbios"
        top      = "0"
        right    = "0"
        bottom   = "0"
        width    = "7"
        showonscroll = "true"
        zindex   = "100000"
    />

    <a:vbox anchors="0 0 0 0" id="vbMain">
        <a:hbox id="view-mode-box" visible="false" height="55" class="view-mode-box" align="center" edge="0 10">
            <a href="http://c9.io" class="c9-logo-view-mode"></a>
            <a:filler />
            <a:hbox align="center">
                <span class="green-label">You are in view mode. </span> To edit
                <a:button skin="button-colorless" class="dark blue" onclick="winLogin.show()" margin="0 10" width="65">sign in</a:button>
                or
                <a href="http://c9.io/site/pricing/" target="_blank" class="nodecor-link">
                    <a:button skin="button-colorless" class="dark orange" onclick="" margin="0 10" width="65">sign up</a:button>
                </a>
            </a:hbox>
            <a:filler />
            <div align="end" class="blue-label">You might have to request editing rights to project admins.</div>
        </a:hbox>

        <a:bar skin="c9-menu-bar" id="logobar">
            <a:hbox>
                <a:hbox id="barTools" edge="0 0 0 0" padding="3" align="center">
                    <a:divider skin="c9-divider-double" />
                </a:hbox>
                <a:filler />
                <a:hbox id="barExtras" edge="0 0 0 0" padding="3" align="center">
                    <a:divider skin="c9-divider" visible="false" />
                </a:hbox>
            </a:hbox>
        </a:bar>

        <a:hbox flex="1" padding="0">
            <a:vbox id="mainRow" padding="0" flex="1">
                <a:hbox id="hboxTabBar" padding="0" edge="0" height="27" align="start">
                    <a:hbox id="barButtonContainer" flex="1" align="start" />
                </a:hbox>
                <a:hbox id="hboxMain" padding="0" edge="0" flex="1">
                    <a:vbox id="colLeft" width="200" minwidth="105" visible="false" />
                    <a:splitter width="0" id="splitterPanelLeft" />
                    <a:vbox id="colMiddle" flex="1" padding="3" />
                </a:hbox>
            </a:vbox>
            <a:vbox id="colRight" padding="0">
                <a:hbox id="hboxDockPanel" flex="1" class="hboxdockpanel">
                </a:hbox>
            </a:vbox>
        </a:hbox>
    </a:vbox>
</a:application>