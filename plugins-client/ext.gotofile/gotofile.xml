<a:application xmlns:a="http://ajax.org/2005/aml">
    <!-- FYI: The model is declared in the gotofile.js -->
    <!--scrollbar       = "sbShared 32 7 7"-->
    
    <a:bar id="winGoToFile"
      buttons   = "close" 
      width     = "500" 
      skin      = "winGoToFile"
      minheight = "35"
      maxheight = "400"
      zindex    = "99999"
      showtab   = "[{require('ext/settings/settings').model}::auto/tabs/@show]"
      top       = "6"
      visible   = "false"
      >
        <a:vbox id="vboxGoToFile" edge="5 5 5 5" padding="5" anchors2="0 0 0 0">
            <a:textbox id="txtGoToFile" realtime="true" skin="searchbox_textbox" focusselect="true"/>
            <a:list id="dgGoToFile"
              class           = "searchresults noscrollbar"
              skin            = "lineselect"
              maxheight       = "350"
              viewport        = "virtual"
              multiselect     = "false"
              autoselect      = "false"
              each            = "file"
              model           = "mdlGoToFile"
              empty-message   = "{
                apf.isTrue([@loading]) ? 
                    'Loading file list. One moment please...' :
                    'No files found that match \'' + txtGoToFile.value + '\''
                }">
                <a:caption>
                    <?lm
                    <span>[@displayname]</span>
                    <span class="path">[@displaypath]</span>
                    ?>
                </a:caption>
            </a:list>
        </a:vbox>
    </a:bar> 
</a:application>