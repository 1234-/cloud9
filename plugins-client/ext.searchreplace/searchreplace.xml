<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:label id="tooltipSearchReplace" visible="false" style="background:black;padding:3px;color:white;position:absolute;z-index:100000;" />
    <a:bar id="winSearchReplace" skin="basic" skinset="searchreplace" zindex="1000" minheight="0" visible="false" height="0">
        <div id="divSearchCount"><span class="searchIter" id="spanSearchIter">0</span><span class="searchTotal" id="spanSearchTotal">0</span></div>
        <a:button onclick="require('ext/searchreplace/searchreplace').findprevious(1)" 
          skin="btnquicksearchnav" class="btnquicksearchnavLeft withDivider" 
          icon="arrow_left_search.png"
          right="29"
          top="7"
          zindex="100"/>
        <a:button onclick="require('ext/searchreplace/searchreplace').findnext(1)" 
          skin="btnquicksearchnav" class="btnquicksearchnavRight" 
          icon="arrow_right_search.png" 
          right="7"
          top="7"
          zindex="100"/>
        <a:vbox class="find-and-replace" padding="5" edge="5" model="{require('core/settings').model}">
             <a:hbox id="hboxFind" padding="5" align="start" margin="0 0 -4 0">
                <a:hbox class="grouped_checkbox_holder" align="start">
                    <a:checkbox id="chkRegEx" value="[editors/code/search/@regex]" class="chkRegEx" label="Regular Expressions" skin="grouped_checkbox" width="28" />
                    <a:checkbox id="chkMatchCase" value="[editors/code/search/@matchcase]" class="chkMatchCase" checked="false" label="Match Case" skin="grouped_checkbox" width="28" />
                    <a:checkbox id="chkWholeWords" value="[editors/code/search/@wholeword]" class="chkWholeWords" label="Whole Words" skin="grouped_checkbox" width="28" />
                </a:hbox>
                <a:hbox class="grouped_checkbox_holder" align="start" margin="0 2 0 0">
                    <a:checkbox id="chkSearchBackwards" value="[editors/code/search/@backwards]" class="chkSearchBackwards" label="Search Backwards" skin="grouped_checkbox" width="28" />
                    <a:checkbox id="chkWrapAround" value="[editors/code/search/@wraparound]" class="chkWrapAround" checked="true" label="Wrap Around" skin="grouped_checkbox" width="28" />
                    <a:checkbox id="chkSearchSelection" class="chkSearchSelection" label="Search Selection" skin="grouped_checkbox" width="28" />
                </a:hbox>
                <a:hbox class="grouped_checkbox_holder" align="start">
                    <a:checkbox id="chkHighlightMatches" value="[editors/code/search/@highlightmatches]" class="chkHighlightMatches" label="Highlight Matches" skin="grouped_checkbox" width="28" />
                </a:hbox>
                <a:textbox id="txtFind" flex="1" skin="searchbox" initial-message="Find" focusselect="true" />
            </a:hbox>
            <a:hbox id="hboxReplace" padding="5" align="start" render="runtime" height="27">
                <a:hbox class="grouped_checkbox_holder" margin="0 56 0 0">
                    <a:checkbox id="chkPreserveCase" value="[editors/code/search/@preservecase]" class="chkPreserveCase" checked="false" label="Preserve Case" skin="grouped_checkbox" width="28" />
                </a:hbox>
                <a:hbox class="grouped_checkbox_holder" margin="0 58 0 0">
                
                </a:hbox>
                <a:textbox id="txtReplace" margin="0 -1 0 0"  flex="1" initial-message="Replace With" focusselect="true" class="searchTxt tb_console" skin="searchbox"/>
                <a:button margin="0 -2 0 0" skin="blackbutton" onclick="require('ext/searchreplace/searchreplace').replace()">Replace</a:button>
                <a:button skin="blackbutton" onclick="require('ext/searchreplace/searchreplace').replaceAll()" >Replace All</a:button>
            </a:hbox>
        </a:vbox>
    </a:bar>
</a:application>