<a:application xmlns:a="http://ajax.org/2005/aml"> 
    <a:window
      id        = "dlgInstallExtension"
      title     = "Wait a minute..."
      icon      = ""
      kbclose   = "true"
      center    = "true"
      width     = "512"
      buttons   = "close"
      modal     = "true"
      skin      = "bk-window2"
      class     = "relative">
        <a:vbox padding="10" edge="15 20 25 20">
            <div>Copying and pasting requires the free Cloud9 Chrome Extension. You'll also be able to unlock additional features!</div>
            <div>Keyboard shortcuts are always available for these actions.</div>
        </a:vbox>
        
        <a:hbox edge="6 10 10" pack="end" padding="8">
            <a:button onclick = "dlgInstallExtension.hide(); window.open('https://chrome.google.com/webstore/detail/nbdmccoknlfggadpfkmcpnamfnbkmkcp')" skin="btn-default-css3" class="btn-green">I'll go get it!</a:button>
        </a:hbox>
    </a:window>
</a:application>