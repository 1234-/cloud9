<a:application xmlns:a="http://ajax.org/2005/aml">
<a:window 
  id = "dashboard"
  width = "1100"
  height = "600"
  center    = "true"
>
    
  <a:bar 
    class = "c9-menu-bar"
    height = "4"
  ></a:bar>
  <a:hbox
    class = "dark-opaque"
    height = "47"
    edge = "9 10 10 10"
  >
    
    <a:textbox
      id           = "projectTitle"
      focusselect  = "true"
      height       = "25"
      margin       = "0 10 0 0"
      skin         = "chromeless"
      style        = "font-size: 20px"
      value        = "Untitled project"
      width        = "260"
      />
    <a:label skin="label-dashboard">Store my data:</a:label>
    <a:dropdown value="auto" width="207" height="27" skin="dropdown-dark-glossy">
        <a:item value="cloud9Git">On Cloud9 as a Git Repo</a:item>
        <a:item value="cloud9Hg">On Cloud9 as a mercurial repo</a:item>
        <a:item value="vm">FTP Server</a:item>
        <a:item value="vm">On my own private virtual machine</a:item>
    </a:dropdown>
    <a:filler />
    <a:hbox class="new-project-options" edge="1 0 0 0">
      <a:button caption="Pick a template" skin="button-link-dark" class="selected" height="25" />
      <a:button caption="Clone" skin="button-link-dark" height="25" />
      <a:button caption="Upload" skin="button-link-dark" height="25" />
    </a:hbox>
    <a:filler />

    <a:button caption="Create" class="create-project dark green" height="27" skin="button-colorless" width="110" />
  </a:hbox>
  <a:bar
    class = "dark-opaque own-vm"
    height = "165"
  >
    <a:button caption="Close" skin="button-close" />
    <a:hbox height="29" margin="0 0 12 0" width="955">
      <a:label skin="label-dashboard" width="76">Host name:</a:label>
      <a:textbox initial-message="localhost" height="27" skin="textbox-on-dark" width="260" />

      <a:label skin="label-dashboard" width="79">User name:</a:label>
      <a:textbox initial-message="root" height="27" skin="textbox-on-dark" width="143"/>

      <a:label skin="label-dashboard" width="82">Initial Path:</a:label>
      <a:textbox initial-message="optional" height="27" skin="textbox-on-dark" width="315"/>
    </a:hbox>

    <a:hbox margin="0 0 12 0" width="955">
      <a:label skin="label-dashboard" width="76">Your key:</a:label>
      <a:vbox>
        <a:textbox skin="large-textarea" class="dark" height="72" width="482"/>
        <a class="more-about-ssh" href="#">Learn how to configure your machine</a>
      </a:vbox>

      <a:label skin="label-dashboard" width="82">Port:</a:label>
      <a:textbox initial-message="optional" height="27" skin="textbox-on-dark" width="92"/>

      <a:button caption="Test your settings to continue" class="dark green" height="27" skin="button-colorless" width="215" />
      
    </a:hbox>

</a:bar>


