<a:window 
    id = "profile"
    class = "profile"
    width = "1000"
    height = "300"
    center = "true"
    resizable = "true"
>
  <a:hbox class="dark-opaque own-vm" edge="20">
      <a:button caption="Close" skin="button-close" height="18" width="18" />
      <a:vbox class="account" height="177" width="440">
          <a:hbox class="header" height="33" edge="10 11 10 10">
              <div class="label" height="33" margin="-10 0 0 0" width="101">My Account</div>
              <a:filler />
              <a:button caption="Manage subscriptions" height="13" skin="button-link-dark" margin="0 8 0 0" />
              <a:button caption="Your SSH key" height="13" skin="button-link-dark" margin="0 8 0 0" />
              <a:button caption="Delete account" height="13" skin="button-link-dark" />
          </a:hbox>
          <a:hbox edge="6 7">
            <a:hbox class="content" edge="6 5" height="127" width="424">
              <div class="avatar-holder">
                <img src="http://cl.ly/400I2c3f1X14453c3Y20/Untitled-1.png" alt="" class="avatar" height="84" width="84" />
              </div>
              <a:vbox>
                <a:textbox
                    height       = "25"
                    margin       = "11 0 0 9"
                    skin         = "chromeless"
                    value        = "Click here to set your full name"
                    width        = "260"
                />
                <div class="public-url" margin="6 0 0 13">Public URL: c9.io/<div class="custom">username</div></div>
                <a:hbox class="share" height="19" edge="0 0 0 24" margin="10 0 0 9">
                  <div margin="0 7 0 0">Share what you love:</div>
                    <a:button caption="Twitter" class="button-social twitter" height="20" margin="-2 5 0 0" skin="button-social" width="20" />
                    <a:button caption="Google Plus" class="button-social google-plus" height="20" margin="-2 5 0 0" skin="button-social" width="20" />
                    <a:button caption="Facebook" class="button-social facebook" height="20" margin="-2 5 0 0" skin="button-social" width="20" />
                    <a:button caption="Mail" class="button-social mail" height="20" margin="-2 0 0 0" skin="button-social" width="20" />
                </a:hbox>
              </a:vbox>
            </a:hbox>
          </a:hbox>
      </a:vbox>
          
      <a:vbox>
        <div>Linked services</div>
        <a:checkbox label="Github(vlad@c9.io)" value="" skin="checkbox_black" />
        <a:checkbox label="" value="" skin="checkbox_black" ></a:checkbox>
        <div>Linking to other services gives you instant access to your external projects!</div>
      </a:vbox>
