            flex         = "5"
            skin         = "textbox-on-dark"
            />
      
      <a:button caption="Clone it" class="clone dark green" height="28" skin="button-colorless" width="122" />
      <a:button class="cloning dark light-grey" height="28" skin="button-colorless" width="122">
        <div class="loading"></div>
      </a:button>
      <a:button caption="Cloning finished" class="cloned dark light-blue" height="28" skin="button-colorless" width="122" />
      <a:button caption="Clone it" class="clone dark error green" height="28" skin="button-colorless" width="122" />
