<a:application xmlns:a="http://ajax.org/2005/aml">
<a:window 
  id = "dashboard"
  width = "900"
  center    = "true"
>
    
  <a:bar 
    class = "c9-menu-bar"
    height = "4"
  ></a:bar>
  <a:hbox
    class = "dark-opaque"
    height = "46"
    edge = "10"
  >
    <a:bar
        align     = "center"
        skin      = "basic"
        padding   = "5">
          <a:textbox
            id           = "projectTitle"
            class        = "fleft"
            focusselect  = "true"
            height       = "25"
            skin         = "chromeless"
            style        = "font-size: 20px"
            value        = "Untitled project"
            width        = "260"
            />
          <a:label class="data fleft">Store my data:</a:label>
          <a:dropdown value="auto" width="207" height="27" skin="dropdown-dark-glossy" class="fleft">
              <a:item value="cloud9Git">On Cloud9 as a Git Repo</a:item>
              <a:item value="cloud9Hg">On Cloud9 as a mercurial repo</a:item>
              <a:item value="vm">FTP Server</a:item>
              <a:item value="vm">On my own private virtual machine</a:item>
          </a:dropdown>
        <a:button caption="Pick a template" skin="button-link-dark" class="fleft"/>
        <a:button caption="Clone" skin="button-link-dark" class="fleft"/>
        <a:button caption="Upload" skin="button-link-dark" class="fleft"/>
    </a:bar>
  </a:hbox>
