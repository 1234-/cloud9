<?xml version='1.0'?>
<a:skin xmlns:a="http://ajax.org/2005/aml" xmlns="http://www.w3.org/1999/xhtml">
   <div name="packageitem">
        <a:style><![CDATA[
            .pacman-window .list {
                height: 400px;
                overflow: auto;
            }
            
            .pacman-window .package {
                clear:both;
                border-top: 1px solid white;
                border-bottom: 1px solid #c3c3c3;
                margin: 0 1px;
                padding: 0 10px;
            }
            
            .pacman-window .package:after {
                content: ".";
                display: block;
                height: 0;
                clear: both;
                visibility: hidden;
            }
            

            
            .pacman-window .col-l {
                float: left;
                max-width: 75%;
            }
            
            .pacman-window .col-r {
                float: right;
                padding-top: 20px;
                text-align: right;
            }
            
            .pacman-window .isuptodate {
                display: block;
                padding-right: 3px;
                padding-top: 10px;
            }
            
            .pacman-window .active {
                font-weight: bold;
            }
            
            .pacman-window .package.active {
                font-weight: normal;
                background: #e1ecf1;
            }
            
            .pacman-window .package button.install, .pacman-window .package button.uninstall  {
                visibility: hidden;
            }
            .pacman-window .package.active button.install, .pacman-window .package.active button.uninstall  {
                visibility: visible;
            }
        ]]></a:style>
    </div>
</a:skin>
