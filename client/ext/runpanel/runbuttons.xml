<a:application xmlns:a="http://ajax.org/2005/aml">

    <a:divider skin="c9-divider" id="divRun" />
    <a:splitbutton
      id       = "btnRun"
      checked  = "[{require('ext/settings/settings').model}::auto/configurations/@debug]"
      icon     = "{this.checked ? 'run.png' : 'run.png'}"
      caption  = "{this.checked ? 'debug' : 'run'}"
      onclick  = "require('ext/runpanel/runpanel').run()"
      visible  = "{!stProcessRunning.active and 1}"
      tooltip  = "{this.checked ? 'Debug' : 'Run'}"
      disabled = "{!ide.onLine}"
      submenu  = "mnuRunCfg" />
    <a:button id="btnStop"
      icon     = "stop.png"
      caption  = "stop"
      width    = "52"
      tooltip  = "Stop"
      skin     = "c9-toolbarbutton"
      onclick  = "require('ext/runpanel/runpanel').stop()"
      visible  = "{stProcessRunning.active and 1}" 
      disabled = "{!ide.onLine}" />

    <a:model id="mdlRunConfigurations">
        <configurations />
    </a:model>
</a:application>