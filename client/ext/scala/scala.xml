<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:window
      id        = "ScalaWindow"
      title     = "Scala Extension Window"
      center    = "true"
      modal     = "false"
      buttons   = "close"
      kbclose   = "true"
      width     = "300">
        <a:vbox>
            <a:hbox padding="5" edge="10">
                Hello World!
            </a:hbox>
            <a:divider />
            <a:hbox pack="end" padding="5" edge="10 10 5 10">
                <a:button 
                  caption="Close" 
                  onclick = "require('ext/scala/scala').closeScalaWindow();"/>
            </a:hbox>
        </a:vbox>
    </a:window>
</a:application>