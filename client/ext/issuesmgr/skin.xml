<?xml version='1.0'?>
<a:skin xmlns:a="http://ajax.org/2005/aml" xmlns="http://www.w3.org/1999/xhtml">
    <a:list name="issueslist">
        <a:style><![CDATA[
            .issueslist{
                overflow: auto;
                position: relative;
                background-color: #545454;
                background: -webkit-gradient(linear,left bottom,left top,color-stop(0, rgb(69,69,69)),color-stop(1, rgb(84,84,84)));
                background: -moz-linear-gradient(center bottom,rgb(69,69,69) 0%,rgb(84,84,84) 100%);
                color: #e7e7e7;
                border-top: 1px solid #282727;
                border-bottom: 1px solid #575757;
                margin: 0;
                outline: none;
                font-family: Arial;
                font-size: 12px;
                text-overflow: ellipsis;
                cursor: default;
                white-space: nowrap;
            }
            .issueslist>.selected{
                background-color: #5f5f5f;
                color: #e7e7e7;
            }
            .issueslistFocus>.selected{
                color : #e7e7e7;
            }
            .issueslist .empty, .issueslist .offline, .issueslist .loading{
                text-align: center;
                padding: 8px 0 0 0;
                color: #777;
                font-size : 8pt;
                font-weight : normal;
            }
            .issueslist>DIV{
                padding: 3px 0px;
                font-weight: bold;
                font-size: 11px;
            }

            .issue_detail {
                height: 0px;
                background: #fffcf8;
                box-shadow: inset 0px 0px 7px rgba(0, 0, 0, 0.5);
                color: #333;
                font-weight: normal;
                white-space: normal;
            }
            
            .issue_detail > * {
                padding: 5px 10px;
            }
            .issue_detail h1 {
                font-size: 16px;
                margin: 5px 0 0 0;
                padding: 10px 10px 0px 10px;
            }
        ]]></a:style>

        <a:presentation>
            <a:main container=".">
                <div class="issueslist">
                </div>
            </a:main>
            <a:item class="." caption="." select="." container=".">
                <div>
                    <div class="issue_detail"></div>
                </div>
            </a:item>
            <a:empty caption=".">
                <div class="message">-</div>
            </a:empty>
        </a:presentation>
    </a:list>
</a:skin>
