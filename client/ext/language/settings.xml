<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:checkbox class="underlined" label="Enable JSHint"
        checked="{[language/@jshint] != '' ? [language/@jshint] : 'true'}"
        value="[language/@jshint]" skin="checkbox_grey"/>
    <a:checkbox class="underlined" label="Variable instance highlighting"
        checked="{[language/@instanceHighlight] != '' ? [language/@instanceHighlight] : 'true'}"
        value="[language/@instanceHighlight]" skin="checkbox_grey"/>
    <a:checkbox class="underlined" label="Mark undeclared variables"
        checked="{[language/@undeclaredVars] != '' ? [language/@undeclaredVars] : 'true'}"
        value="[language/@undeclaredVars]" skin="checkbox_grey"/>
    <a:checkbox class="underlined" label="Mark unused function arguments"
        checked="{[language/@unusedFunctionArgs] != '' ? [language/@unusedFunctionArgs] : 'true'}"
        value="[language/@unusedFunctionArgs]" skin="checkbox_grey"/>
    <a:hbox edge="5 5 2 5" align="center">
        <a:label flex="1">Warning level:</a:label>
        <a:dropdown default="info" value="[{require('ext/settings/settings').model}::language/@warnLevel]" width="80" height="21">
            <a:item value="error">Error</a:item>
            <a:item value="warning">Warning</a:item>
            <a:item value="info">Info</a:item>
        </a:dropdown>
    </a:hbox>
</a:application>
