<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:bar id="winGoToFile"
      buttons   = "close" 
      width     = "500" 
      height    = "400"
      top       = "39"
      skin      = "basic"
      left      = "50%-250"
      resizable = "vertical"
      visible   = "false"
      zindex    = "999999"
      style     = "
        background:#e8e8e8;
        box-shadow:0 5px 7px rgba(0,0,0,0.5);
        border:1px solid #bbb;
        border-width:0 1px 1px 1px;
      "
      onresize = "
        this.setAttribute('left', '50%-' + this.getWidth()/2);
      ">
        <a:vbox edge="5" padding="5" anchors="0 0 0 0">
            <a:textbox id="txtGoToFile" realtime="true" skin="searchbox_textbox" focusselect="true" />
            <a:list id="dgGoToFile"
              flex    = "1" 
              autoselect = "false"
              class   = "searchresults noscrollbar"
              skin    = "lineselect"
              scrollbar = "sbShared 20 2 2"
              model   = "mdlGoToFile"
              multiselect     = "true"
              empty-message   = "No search results">
                <a:each match="[d:response/d:href]" filter="{txtGoToFile.value}" filter-fields="text()" />
                <a:caption><?lm
                    <span>{
                        var re = new RegExp("({txtGoToFile.value})", 'gi');
                        apf.getFilename([text()]).replace(re, <strong>$1</strong>);
                    }</span>
                    [text()]
                ?></a:caption>
            </a:list>
        </a:vbox>
        <a:model id="mdlGoToFile" />
    </a:bar>
</a:application>