<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:window
      id        = "winSaveSessionAs"
      center    = "true"
      height    = "350"
      icon      = ""
      buttons   = "close"
      kbclose   = "true"
      resizable = "true"
      title     = "Save Session As"
      width     = "480"
      onshow    = "txtSaveSessionAs.clear()">
        <a:vbox
          anchors   = "10 10 0 10"
          padding   = "5">
            <a:hbox
              align     = "center"
              padding   = "5">
                <a:label flex="1" class="lbl_saveas">Save as:</a:label>
                <a:textbox
                  id           = "txtSaveSessionAs"
                  flex         = "7"
                  focusselect  = "true"/>
            </a:hbox>
            <div class="dgLikeContaier">
                <div class="heading">Existing Sessions</div>
                <a:hbox
                  anchors  = "20 0 0 0"
                  overflow = "hidden">
                    <a:list
                      id            = "trSaveSessionAs"
                      class         = "trDgLike"
                      flex          = "1"
                      model         = "{require('ext/settings/settings').model}"
                      onclick = "txtSaveSessionAs.setValue(this.selected.getAttribute('name'))">
                        <a:each match="[auto/sessions/session]">
                           <a:caption match="[@name]" />
                           <a:icon
                             value = "page_white_text.png" />
                        </a:each>
                    </a:list>
                    
                    <a:scrollbar
                        for      = "trSaveSessionAs"
                        margin   = "2"
                        skin     = "sbios"
                        width    = "7"
                        overflow = "auto"
                    />
                </a:hbox>
            </div>

            <a:hbox
              edge    = "4 0 0"
              pack    = "end"
              padding = "5">
                <a:button
                  onclick = "winSaveSessionAs.hide()">
                    Cancel
                </a:button>
                <a:button
                  class    = "ui-btn-green"
                  default  = "2"
                  onclick  = "require('ext/tabsessions/tabsessions').saveSession(txtSaveSessionAs.getValue())">
                    Save
                </a:button>
            </a:hbox>
        </a:vbox>
    </a:window>
</a:application>
